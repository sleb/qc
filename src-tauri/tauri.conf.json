{
  "productName": "qc",
  "version": "0.1.0",
  "identifier": "app.qclip.quickclip",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "QuickClip",
        "label": "main",
        "width": 800,
        "height": 600,
        "url": "/",
        "visible": false,
        "closable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "tray",
      "iconAsTemplate": true,
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
